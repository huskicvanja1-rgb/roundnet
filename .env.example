# Environment Variables
# Copy this file to .env.local and fill in the values

# Database (PostgreSQL with PostGIS)
DATABASE_URL="postgresql://user:password@localhost:5432/roundnet?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Email (for notifications and contact forms)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="noreply@roundnet-directory.eu"

# Maps
NEXT_PUBLIC_MAPBOX_TOKEN=""
NEXT_PUBLIC_GOOGLE_MAPS_KEY=""

# Analytics
NEXT_PUBLIC_GA_ID=""
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=""

# Scraping Configuration
SCRAPE_USER_AGENT="RoundnetDirectoryBot/1.0 (+https://roundnet-directory.eu/bot)"
SCRAPE_DELAY_MS="2000"
SCRAPE_RESPECT_ROBOTS="true"

# Redis (for caching and job queues)
REDIS_URL="redis://localhost:6379"

# Admin
ADMIN_EMAIL="admin@roundnet-directory.eu"

# Feature Flags
ENABLE_USER_REVIEWS="false"
ENABLE_EVENT_CALENDAR="false"
ENABLE_PARTNER_FINDER="false"
